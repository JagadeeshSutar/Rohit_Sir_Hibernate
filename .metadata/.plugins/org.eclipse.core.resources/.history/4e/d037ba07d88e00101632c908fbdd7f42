package transactionmanagement;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class TransactionManagement {
	public static void main(String[] args) {
		String url = "jdbc:postgresql://localhost:5432/JDBC_Coaching";
		String username = "postgres";
		String password = "root";
		
		try {
			Class.forName("org.postgresql.Driver");
			
			Connection con = DriverManager.getConnection(url,username,password);
			
			String sqlBooking_info = "insert into booking_info values(10,'INDIGO','BLR','UK')";
			
			String sqlPasseneger_info1 = "insert into passenger_info values(11,'Dhanish',26,'Male')";
			String sqlPasseneger_info2 = "insert into passenger_info values(12,'Preeti',22,'Female')";
			String sqlPasseneger_info3 = "insert into passenger_info values(13,'Tyagi',23,'Male')";
			
			con.setAutoCommit(false);
			
			Statement st = con.createStatement();
			
			st.execute(sqlBooking_info);
			st.execute(sqlPasseneger_info1);
			st.execute(sqlPasseneger_info2);
			st.execute(sqlPasseneger_info3);
			
			if(DemoPaymentGateway.isSuccess()) {
				st.execute(sqlBooking_info);
				con.commit();
			}else {
				con.commit();
			}
			
			con.close();
		} catch (ClassNotFoundException | SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
		
		
	}
}
